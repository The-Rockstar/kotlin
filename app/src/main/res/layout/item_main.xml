<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/tens"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_item_profile_pic"
            android:layout_width="50dp"
            android:src="@drawable/theme_button"
            android:scaleType="fitCenter"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_item_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="bottom|left"
                android:textColor="#CC0000"
                android:textSize="@dimen/name_size"
                android:text="Ram Bhagat" />


            <TextView
                android:id="@+id/item_emp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMP code: 34567" />


            <TextView
                android:id="@+id/main_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work in progress,will replace all placeholder in final version" />

            <TextView
                android:id="@+id/main_item_update_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21-Nov-2017" />

        </LinearLayout>

        <ImageView
            android:id="@+id/main_item_status_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/theme_button" />
    </LinearLayout>

</android.support.v7.widget.CardView>